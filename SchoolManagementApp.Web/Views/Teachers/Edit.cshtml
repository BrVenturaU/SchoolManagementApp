@using SchoolManagementApp.Shared.Dtos.Teachers

@{
    @model TeacherToUpdateDto;
    ViewData["Title"] = "Editar Profesor";
    string[] genders = ViewBag.Genders;
    Guid oid = ViewBag.Oid;
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-11"><h2>Editar Profesor: @Model.FirstName @Model.FirstSurname</h2></div>
        <div class="col-1">
            <a class="btn btn-sm btn-secondary" asp-action="Index">Listado</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="Edit" asp-asp-route-oid="@oid">
                                <div asp-validation-summary="ModelOnly" class="d-block text-danger mt-2"></div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="FirstName" class="col-12 control-label">Primer Nombre:</label>
                                        <div>
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="MiddleName" class="col-12 control-label">Segundo Nombre:</label>
                                        <div>
                                            <input asp-for="MiddleName" class="form-control" />
                                            <span asp-validation-for="MiddleName" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="FirstSurname" class="col-12 control-label">Primer Apellido:</label>
                                        <div>
                                            <input asp-for="FirstSurname" class="form-control" />
                                            <span asp-validation-for="FirstSurname" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="LastSurname" class="col-12 control-label">Segundo Apellido: </label>
                                        <div>
                                            <input asp-for="LastSurname" class="form-control" />
                                            <span asp-validation-for="LastSurname" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="Gender" class="col-12 control-label">Genero: </label>
                                        <div>
                                            @foreach (var gender in genders)
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input asp-for="Gender" class="form-check-input" id="@gender" type="radio" value="@gender">
                                                    <label class="form-check-label" for="@gender">
                                                        @gender
                                                    </label>
                                                </div>
                                            }
                                            <span asp-validation-for="Gender" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="BirthDate" class="col-12 control-label">Fecha de Nacimiento:</label>
                                        <div>
                                            <input asp-for="BirthDate" class="form-control" />
                                            <span asp-validation-for="BirthDate" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col text-end">
                                        <input type="submit" value="Editar" class="btn btn-success" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/no-digit-text-validator.js" type="text/javascript"></script>
}