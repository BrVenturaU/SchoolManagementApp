@using SchoolManagementApp.Shared.Dtos.Teachers

@{
    @model ICollection<TeacherDto>;
    ViewData["Title"] = "Profesores";
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-11"><h2>Profesores</h2></div>
        <div class="col-1">
            <a class="btn btn-sm btn-primary" asp-action="Create">Crear</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-info" role="alert">
                                    <h4 class="alert-heading">¡Crea el primer profesor!</h4>
                                    <p>Aun no hay profesores registrados, da clic al siguiente enlace para crear uno.</p>
                                    <hr>
                                    <div class="text-end">
                                        <a class="btn btn-sm btn-primary" asp-action="Create">Crear</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table align-middle">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Apellido</th>
                                                <th>Genero</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var teacher in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @teacher.FirstName
                                                    </td>
                                                    <td>
                                                        @teacher.FirstSurname
                                                    </td>
                                                    <td>
                                                        @teacher.Gender
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-oid="@teacher.Oid">Editar</a>
                                                        <form class="d-inline" asp-action="Delete" asp-route-oid="@teacher.Oid">
                                                            <input class="btn btn-danger btn-sm" type="submit" value="Eliminar" />
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>