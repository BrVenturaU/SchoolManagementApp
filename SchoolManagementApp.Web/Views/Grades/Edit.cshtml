@using SchoolManagementApp.Shared.Dtos.Grades

@{
    @model GradeToUpdateDto;
    ViewData["Title"] = "Editar Grado";
    Guid oid = ViewBag.Oid;
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-11"><h2>Editar Grado: @Model.Name</h2></div>
        <div class="col-1">
            <a class="btn btn-sm btn-secondary" asp-action="Index">Listado</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="Edit" asp-asp-route-oid="@oid">
                                <div asp-validation-summary="ModelOnly" class="d-block text-danger mt-2"></div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="Name" class="col-12 control-label">Nombre:</label>
                                        <div>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="Description" class="col-12 control-label">Descripción:</label>
                                        <div>
                                            <textarea asp-for="Description" class="form-control"></textarea>
                                            <span asp-validation-for="Description" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="IsActive" class="col-12 control-label">Estado: </label>
                                        <div>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="IsActive" class="form-check-input" id="active" type="radio" value="true">
                                                <label class="form-check-label" for="active">
                                                    Activo
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="IsActive" class="form-check-input" id="inactive" type="radio" value="false">
                                                <label class="form-check-label" for="inactive">
                                                    Inactivo
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsActive" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col text-end">
                                        <input type="submit" value="Editar" class="btn btn-success" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}