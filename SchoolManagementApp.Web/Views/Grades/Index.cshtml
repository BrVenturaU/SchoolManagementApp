@using SchoolManagementApp.Shared.Dtos.Grades

@{
    @model ICollection<GradeDto>;
    ViewData["Title"] = "Grados";
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-11"><h2>Grados</h2></div>
        <div class="col-1">
            <a class="btn btn-sm btn-primary" asp-action="Create">Crear</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-info" role="alert">
                                    <h4 class="alert-heading">¡Crea el primer grado!</h4>
                                    <p>Aun no hay grados registrados, da clic al siguiente enlace para crear uno.</p>
                                    <hr>
                                    <div class="text-end">
                                        <a class="btn btn-sm btn-primary" asp-action="Create">Crear</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table align-middle">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Descripción</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var grade in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @grade.Name
                                                    </td>
                                                    <td>
                                                        @grade.Description
                                                    </td>
                                                    <td>
                                                        <span class="badge rounded-pill @(grade.IsActive ? "bg-info" : "bg-danger")">@(grade.IsActive ? "ACTIVO" : "INACTIVO")</span>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-oid="@grade.Oid">Editar</a>
                                                        <form class="delete d-inline" asp-action="Delete" asp-route-oid="@grade.Oid">
                                                            <input class="btn btn-danger btn-sm" type="submit" value="Eliminar" />
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>