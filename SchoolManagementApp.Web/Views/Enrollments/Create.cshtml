@using SchoolManagementApp.Shared.Dtos.Enrollments
@using SchoolManagementApp.Shared.Dtos.Grades
@using SchoolManagementApp.Shared.Dtos.Students
@using SchoolManagementApp.Shared.Dtos.Teachers

@{
    @model EnrollmentCreationDto;
    ViewData["Title"] = "Inscribir";
    IEnumerable<StudentDto> students = ViewBag.Students;
    IEnumerable<TeacherDto> teachers = ViewBag.Teachers;
    IEnumerable<GradeDto> grades = ViewBag.Grades;
    string[] gradeGroups = ViewBag.GradeGroups;
    IEnumerable<int> years = ViewBag.Years;
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-11"><h2>Inscribir Alumno</h2></div>
        <div class="col-1">
            <a class="btn btn-sm btn-secondary" asp-action="Index">Listado</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="d-block text-danger mt-2"></div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="StudentOid" class="col-12 control-label">Estudiante:</label>
                                        <div>
                                            <select asp-for="StudentOid" class="form-control" asp-items="@(new SelectList(students, "Oid", "FullName"))">
                                                <option value="">Selecciona un estudiante</option>
                                            </select>
                                            <span asp-validation-for="StudentOid" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="TeacherOid" class="col-12 control-label">Profesor:</label>
                                        <div>
                                            <select asp-for="TeacherOid" class="form-control" asp-items="@(new SelectList(teachers, "Oid", "FullName"))">
                                                <option value="">Selecciona un profesor</option>
                                            </select>
                                            <span asp-validation-for="TeacherOid" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12 col-md">
                                        <label asp-for="GradeOid" class="col-12 control-label">Grado:</label>
                                        <div>
                                            <select asp-for="GradeOid" class="form-control" asp-items="@(new SelectList(grades, "Oid", "Name"))">
                                                <option value="">Selecciona un grado</option>
                                            </select>
                                            <span asp-validation-for="GradeOid" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="Group" class="col-12 control-label">Sección:</label>
                                        <div>
                                            <select asp-for="Group" class="form-control" asp-items="new SelectList(gradeGroups)">
                                                <option value="">Selecciona una sección</option>
                                            </select>
                                            <span asp-validation-for="Group" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md">
                                        <label asp-for="Year" class="col-12 control-label">Año:</label>
                                        <div>
                                            <select asp-for="Year" class="form-control" asp-items="new SelectList(years)">
                                                <option value="">Selecciona el año</option>
                                            </select>
                                            <span asp-validation-for="Year" class="d-block text-danger mt-2"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col text-end">
                                        <input type="submit" value="Crear" class="btn btn-success" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}